@model Project_EDEO.Models.Diagnostic

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    @using (Html.BeginForm(new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="card-header">
            <strong>Create new</strong> medical record
        </div>
        <div class="card-body card-block">
            <div class="row form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Chronological Age</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.ChronologicalAge, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Chronological age", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChronologicalAge, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Model estimated age</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.ModelEstimatedAge, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Model age", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ModelEstimatedAge, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Doctor estimated age</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.DoctorEstimatedAge, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Doctor estimated age", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DoctorEstimatedAge, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Image</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Image URL", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Date</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Estimation date", @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Medical record</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.MedicalRecordID, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Medical record", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MedicalRecordID, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Create
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    }
</div>

<div>
    <a href=@Url.Action("Index", "MedicalRecords") class="btn btn-outline-secondary" type="button">Back to list</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}