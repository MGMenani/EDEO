@model Project_EDEO.Models.EstimatorModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Are you sure you want to <strong>delete</strong> estimator model?
    </div>
    <div class="card-body card-block">
        <div class="row form-group">
            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Name</label></div>
            <div class="col-12 col-md-9">
                @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control-static" } })
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Main file</label></div>
            <div class="col-12 col-md-9">
                @Html.DisplayFor(model => model.PythonFile, new { htmlAttributes = new { @class = "form-control-static" } })
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Date time</label></div>
            <div class="col-12 col-md-9">
                @Html.DisplayFor(model => model.DateTime, new { htmlAttributes = new { @class = "form-control-static" } })
            </div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3"><label for="text-input" class=" form-control-label">Active?</label></div>
            <div class="col-12 col-md-9">
                @Html.DisplayFor(model => model.Active, new { htmlAttributes = new { @class = "form-control-static" } })
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card-footer">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href=@Url.Action("Index", "EstimatorModels") class="btn btn-secondary" type="button">Back to list</a>
        </div>
    }
</div>
