
@{
    ViewBag.Title = "Us";
    Layout = "~/Views/About/_Layout_Landing.cshtml";
}

<!-- Page top section start -->
<div class="page-top-area set-bg" data-setbg="@Url.Content("~/images/headers-bg/1.jpg")">
