                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @type = "text", @placeholder = "Your name" } })
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @placeholder = "E-mail" } })
                            </div>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @type = "text", @placeholder = "Subject" } })
                                @Html.TextAreaFor(model => model.Message, 10, 80, new { @placeholder = "Message" })
                                <button class="site-btn light">Send</button>
                            </div>
