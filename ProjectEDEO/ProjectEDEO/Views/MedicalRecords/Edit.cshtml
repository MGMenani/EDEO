@model Project_EDEO.Models.MedicalRecord

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    @using (Html.BeginForm(new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="card-header">
            <strong>Edit existing</strong> medical record
        </div>
        <div class="card-body card-block">
            <div class="row form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Name</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Name", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Last name</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Last Name", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Born date</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.BornDate, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Date", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BornDate, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">User ID</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Date", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Medical Record ID</label></div>
                <div class="col-12 col-md-9">
                    @Html.EditorFor(model => model.MedicalRecordID, new { htmlAttributes = new { @id = "text-input", @name = "text-input", @placeholder = "Date", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MedicalRecordID, "", new { @class = "form-text text-muted text-danger" })
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="fa fa-dot-circle-o"></i> Save
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    }
</div>

<div>
    <a href=@Url.Action("Index", "MedicalRecords") class="btn btn-outline-secondary" type="button">Back to list</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
